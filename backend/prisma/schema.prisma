generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  passwordResetToken String?
  passwordResetExpires DateTime?
  role      String   @default("USER")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  clients      Client[]
  interactions Interaction[]
  tasks        Task[]
  segments     ClientSegment[]
  documents    Document[]
  templates    EmailTemplate[]
  socialAccounts SocialAccount[]
}

model Client {
  id          String   @id @default(uuid())
  name        String
  email       String?
  phone       String?
  company     String?
  address     String?
  website     String?
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user        User      @relation(fields: [userId], references: [id])
  interactions Interaction[]
  tasks       Task[]
  segments    ClientSegment[]
  documents   Document[]
}

model Interaction {
  id        String   @id @default(uuid())
  type      String
  notes     String?
  clientId  String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  client Client @relation(fields: [clientId], references: [id])
  user   User   @relation(fields: [userId], references: [id])
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String?
  clientId    String?
  dueDate     DateTime?
  status      String   @default("PENDING") // PENDING, IN_PROGRESS, COMPLETED
  reminderSent Boolean  @default(false)
  overdueNotified Boolean @default(false)
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  client Client? @relation(fields: [clientId], references: [id])
  user   User   @relation(fields: [userId], references: [id])
}

model ClientSegment {
  id        String   @id @default(uuid())
  name      String
  description String?
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user    User     @relation(fields: [userId], references: [id])
  clients Client[]
}

model EmailTemplate {
  id        String   @id @default(uuid())
  name      String
  subject   String
  body      String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id])
}

model Document {
  id          String   @id @default(uuid())
  filename    String
  originalName String
  mimeType    String
  size        Int
  path        String
  description String?
  clientId    String
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  client Client @relation(fields: [clientId], references: [id])
  user   User   @relation(fields: [userId], references: [id])
}

model SocialAccount {
  id           String   @id @default(uuid())
  provider     String
  providerId   String?
  accessToken  String
  refreshToken String?
  userId       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}